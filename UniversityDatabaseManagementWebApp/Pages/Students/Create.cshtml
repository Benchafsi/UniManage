@page
@model UniversityDatabaseManagementWebApp.Pages.Students.CreateModel
@{
}


<h2 class="text-light text-center mb-3">Add Undergraduate</h2>

@if (!Model.errorMessage.Equals(""))
{
    <h6 class="text-light"><strong>@Model.errorMessage</strong></h6>
}

<form class="container" method="POST">
    <div class="row mb-3">
        <label for="firstname" class="col-md-1 col-form-label">Firstname</label>
        <div>
            <input type="text" class="form-control" name="firstname" id="firstname" placeholder="Enter Firstname" value="@Model.studentDTO.Firstname" />
        </div>
    </div>
    <div class="row mb-3">
        <label for="lastname" class="col-md-1 col-form-label">Lastname</label>
        <div>
            <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Enter Lastname" value="@Model.studentDTO.Lastname" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-md-1 col-md-3 d-grid">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>

        <div class="offset-md-1 col-md-3 d-grid">
            <a href="/Students/Index" role="button" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>